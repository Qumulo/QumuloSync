{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
      "force": {
        "type": "boolean"
      },
      "log": {
        "type": "string"
      },
      "delete_non_existing": {
        "type": "boolean"
      },
      "top_dir": {
        "type": "string"
      },
      "skip_replication": {
        "type": "boolean"
      },
      "smb": {
        "type": "object",
        "properties": {
          "shares": {
            "type": "array",
            "items": {"type": "string"}
          },
          "hide": {
            "type": "boolean"
          }
        },
        "required": ["shares"]
      },
      "nfs": {
        "type": "object",
        "properties": {
          "exports": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "required": ["exports"]
      },
      "quota": {
        "type": "object",
        "properties": {
          "directories": {
            "type": "array",
            "items": {"type": "string"}
          },
          "additional_limit": {
            "type": "integer"
          }
        },
        "required": ["directories"]
      },
      "s3": {
        "type": "object",
        "properties": {
          "buckets": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "required": ["buckets"]
      },
      "snapshot_policy": {
        "type": "object",
        "properties": {
          "policies": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "required": ["policies"]
      },
      "source": {
        "type": "object",
        "properties": {
          "address": {"type": "string"},
          "port": {"type": "string"},
          "username": {"type": "string"},
          "password": {"type": "string"},
          "access_token": {"type": "string"}
        },
        "required": ["address"]
      },
      "destination": {
        "type": "object",
        "properties": {
          "address": {"type": "string"},
          "port": {"type": "string"},
          "username": {"type": "string"},
          "password": {"type": "string"},
          "access_token": {"type": "string"}
        },
        "required": ["address"]
      }
    },
    "required": ["source", "destination"]
}
